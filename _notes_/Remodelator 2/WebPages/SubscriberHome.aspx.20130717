<%@ Page Language="VB" AutoEventWireup="false" CodeFile="Copy (2) of SubscriberHome.aspx.vb"
    Inherits="Remodelator.SubscriberHome" MasterPageFile="~/MasterPages/site.master" %>

<%@ MasterType TypeName="Remodelator.site" %>
<%@ Register TagPrefix="ComponentArt" Namespace="ComponentArt.Web.UI" Assembly="ComponentArt.Web.UI" %>
<%@ Register TagPrefix="ClozWebControls" Namespace="ClozWebControls" Assembly="ClozWebControls" %>
<%@ Register Src="../UserControls/ItemSelect.ascx" TagName="ItemSelect" TagPrefix="uc1" %>
<%@ Register Src="../UserControls/EditProfile.ascx" TagName="EditProfile" TagPrefix="uc2" %>
<asp:Content ID="NavContent" ContentPlaceHolderID="CP" runat="server">
	<div id="JobBanner" runat="server" class="JobHeader">
    </div>
    <div id="SubscriberRollup" runat="server">
        <table width="100%" border="0">
            <tr>
                <td valign="top">
                    <div class="DivHeader">
                        Your Estimates</div>
                    <div style="padding: 5px 0px 5px 0px; text-align: left; width: 100%">
                        <asp:LinkButton ID="btnCreate" runat="server" Text="Create New Estimate"></asp:LinkButton></div>
                    <div style="border: 1px solid black; padding: 0px 0px 10px 0px">
                        <asp:Repeater ID="EstimateList" runat="server">
                            <HeaderTemplate>
                                <table cellpadding="2" cellspacing="2" border="0">
                                    <thead style="font-weight: bold">
                                        <tr align="center">
                                            <td style="border-bottom: solid 1px black;">
                                                Name
                                            </td>
                                            <td style="border-bottom: solid 1px black;">
                                                Version
                                            </td>
                                            <td width="150px" style="border-bottom: solid 1px black;">
                                                Date Updated</td>
                                            <td style="border-bottom: solid 1px black;">
                                                Status</td>
                                            <td colspan="6" align="center" style="border-bottom: solid 1px black;">
                                                Actions
                                            </td>
                                        </tr>
                                    </thead>
                            </HeaderTemplate>
                            <ItemTemplate>
                                <tr>
                                    <td align="left">
                                        <a href='<%# Eval("OrderID", "../WebPages/Estimate.aspx?ID={0}") %>' target="_self">
                                            <%# Eval("Description") %></a></td>
                                    <td align="center">
                                        <%#Eval("Revision")%></td>
                                    <td align="center">
                                        <%#Eval("DateUpdated", "{0:MM/dd/yyyy hh:mm:sstt}")%></td>
                                    <td align="center">
                                        <%#Eval("Status")%></td>
                                    <td style="width: 15px">
                                    </td>
                                    <td>
                                        <asp:LinkButton ID="btnEdit" runat="server" Text="Edit" CommandName="Edit"></asp:LinkButton></td>
                                    <td>
                                        <asp:LinkButton ID="btnVersion" runat="server" Text="Version" CommandName="Version"></asp:LinkButton></td>

                                    <td>
                                        <asp:LinkButton ID="btnDelete" runat="server" Text="Delete" CommandName="Delete"
                                            OnClientClick="return confirm('Are you sure you want to delete this Estimate? \n\nYou will no be able to undo this action if you proceed.');"></asp:LinkButton></td>
                                    <td>
                                        <asp:LinkButton ID="btnTemplate" runat="server" Text="Make Template" CommandName="Template"></asp:LinkButton></td>
                                </tr>
                            </ItemTemplate>
                            <FooterTemplate>
                                </table>
                            </FooterTemplate>
                        </asp:Repeater>
                        <div id="NoEstimates" runat="server" style="color: Red; font-style: italic; padding-top: 10px">
                            You have not created any estimates.
                        </div>
                    </div>
                </td>
            </tr>
            <tr>
                <td valign="top">
                    <div class="DivHeader" style="margin:10px 0px 5px 0px">
                        Your Estimate Templates</div>
                    <div style="border: 1px solid black; padding: 0px 0px 10px 0px">
                        <asp:Repeater ID="EstimateTemplateList" runat="server">
                            <HeaderTemplate>
                                <table cellpadding="2" cellspacing="2" border="0">
                                    <thead style="font-weight: bold">
                                        <tr align="middle">
                                            <td style="border-bottom: solid 1px black;">
                                                Name
                                            </td>
                                            <td width="150px" style="border-bottom: solid 1px black;">
                                                Date Updated</td>
                                            <td colspan="4" align="center" style="border-bottom: solid 1px black;">
                                                Actions
                                            </td>
                                        </tr>
                                    </thead>
                            </HeaderTemplate>
                            <ItemTemplate>
                                <tr>
                                    <td>
                                        <a href='<%# Eval("OrderID", "../WebPages/Estimate.aspx?ID={0}") %>' target="_self">
                                            <%# Eval("Description") %></a></td>
                                    <td>
                                        &nbsp;<%#Eval("DateUpdated", "{0:MM/dd/yyyy hh:mm:sstt}")%>
                                    </td>
                                    <td style="width: 15px">
                                    </td>
                                    <td>
                                        <asp:LinkButton ID="btnEdit" runat="server" Text="Edit" CommandName="Edit"></asp:LinkButton></td>
                                    <td>
                                        <asp:LinkButton ID="btnDelete" runat="server" Text="Delete" CommandName="Delete"
                                            OnClientClick="return confirm('Are you sure you want to delete this Estimate Template? \n\nYou will no be able to undo this action if you proceed.');"></asp:LinkButton></td>
                                    <td>
                                        <asp:LinkButton ID="btnEstimate" runat="server" Text="Make Estimate" CommandName="Estimate"></asp:LinkButton></td>
                                </tr>
                            </ItemTemplate>
                            <FooterTemplate>
                                </table>
                            </FooterTemplate>
                        </asp:Repeater>
                        <div id="NoEstimateTemplates" runat="server" style="color: Red; font-style: italic;
                            padding-top: 10px">
                            You have not created any estimate templates.
                        </div>
                    </div>
                </td>
            </tr>
        </table>
    </div>
    <div id="MiscDiv" runat="server" style="margin: 0px 3px 0px 3px">
        <div class="DivHeader" style="margin:10px 0px 5px 0px">
            Miscellaneous</div>
        <div style="border: 1px solid black; padding: 10px 0px 10px 0px">
            <asp:LinkButton ID="btnEditProfile" runat="server">Edit Profile</asp:LinkButton>
        </div>
    </div>
    <div id="EditProfileDiv" runat="server">
        <uc2:EditProfile ID="ucEditProfile" runat="server" />
    </div>
</asp:Content>
